{
    "type": "page",
    "title": "管理列表",
    "toolbar": [
        {
            "type": "button",
            "actionType": "drawer",
            "label": "新增",
            "className": "m-r-sm",
            "primary": true,
            "drawer": {
                "position": "right",
                "size": "lg",
                "title": "新增",
                "body": {
                    "type": "form",
                    "name": "admin-create-form",
                    "api": {
                        "method": "post",
                        "url": "/mapi/admins/create",
                        "dataType": "form"
                    },
                    "onEvent": {
                        "click": {
                            "actions": [
                                {
                                    "actionType": "reload",
                                    "componentId": "admin_list"
                                }
                            ]
                        }
                    },
                    "body": [
                        {
                            "type": "input-text",
                            "name": "nickname",
                            "label": "昵称",
                            "required": true
                        },
                        {
                            "type": "divider"
                        },
                        {
                            "type": "input-text",
                            "name": "name",
                            "label": "登录名",
                            "required": true
                        },
                        {
                            "type": "divider"
                        },
                        {
                            "type": "input-text",
                            "name": "phone",
                            "label": "手机号",
                            "required": true
                        }
                    ]
                }
            }
        }
    ],
    "body": {
        "type": "crud",
        "draggable": true,
        "api": {
            "method": "post",
            "url": "/mapi/admins/lists",
            "dataType": "form"
        },
        "perPage": 20,
        "id":"admin_list",
        "syncLocation":false,
        "labelTpl": "${id}",
        "filterTogglable": true,
        "headerToolbar": [
            "filter-toggler",
            "bulkActions",
            {
                "type": "tpl",
                "tpl": "共有 ${total} 条数据。",
                "className": "v-middle"
            },
            {
                "type": "columns-toggler",
                "align": "right"
            },
            {
                "type": "drag-toggler",
                "align": "right"
            },
            {
                "type": "pagination",
                "align": "right"
            }
        ],
        "footerToolbar": [
            "statistics",
            "switch-per-page",
            "pagination"
        ],
        "columns": [
            {
                "name": "uid",
                "label": "UID",
                "type": "text",
                "toggled": true
            },
            {
                "name": "nickname",
                "label": "昵称",
                "type": "text",
                "toggled": true
            },
            {
                "name": "name",
                "label": "登录名",
                "type": "text",
                "toggled": true
            },
            {
                "name": "phone",
                "label": "手机号",
                "type": "text",
                "toggled": true
            },
            {
                "name": "create_time",
                "label": "创建时间",
                "type": "text",
                "toggled": true
            },
            {
                "name": "update_time",
                "label": "修改时间",
                "type": "text",
                "toggled": true
            },
            {
                "type": "operation",
                "label": "操作",
                "width": 100,
                "buttons": [
                    {
                        "type": "button",
                        "label": "编辑",
                        "level": "info",
                        "actionType": "drawer",
                        "drawer": {
                            "position": "right",
                            "size": "lg",
                            "title": "编辑",
                            "body": {
                                "type": "form",
                                "name": "admin-edit-form",
                                "api": {
                                    "method": "post",
                                    "url": "/mapi/admins/update",
                                    "dataType": "form"
                                },
                                "onEvent": {
                                    "click": {
                                        "actions": [
                                            {
                                                "actionType": "reload",
                                                "componentId": "admin_list"
                                            }
                                        ]
                                    }
                                },
                                "body": [
                                    {
                                        "type": "input-text",
                                        "name": "uid",
                                        "label": "Uid",
                                        "disabled": true
                                    },
                                    {
                                        "type": "divider"
                                    },
                                    {
                                        "type": "input-text",
                                        "name": "nickname",
                                        "label": "昵称",
                                        "required": true
                                    },
                                    {
                                        "type": "divider"
                                    },
                                    {
                                        "type": "input-text",
                                        "name": "name",
                                        "label": "登录名",
                                        "required": true
                                    },
                                    {
                                        "type": "divider"
                                    },
                                    {
                                        "type": "input-text",
                                        "name": "phone",
                                        "label": "手机号",
                                        "required": true
                                    }
                                ]
                            }
                        }
                    },
                    {
                        "type": "button",
                        "label": "删除",
                        "level": "danger",
                        "actionType": "ajax",
                        "confirmText": "您确认要删除, 会删除班级和排课中的区域管理者?",
                        "api": {
                            "method": "get",
                            "url": "/mapi/admins/delete?uid=$uid"
                        }
                    }
                ],
                "toggled": true
            }
        ]
    }
}