{
    "type": "page",
    "title": "消费记录",
    "body": {
        "type": "crud",
        "draggable": true,
        "api": {
            "method": "post",
            "url":"/mapi/records/lists",
            "dataType": "form"
        },
        "perPage": 20,
        "syncLocation":false,
        "id" : "records_lists",
        "name" : "records_lists",
        "labelTpl": "${id}",
        "filter": {
            "title": "条件搜索",
            "submitText": "",
            "body": [
                {
                    "type": "input-text",
                    "name": "uid",
                    "label": "用户UID",
                    "size": "md",
                    "placeholder": ""
                },
                {
                    "type": "select",
                    "name": "category",
                    "label": "场景",
                    "size" : "md",
                    "value": 0,
                    "options": [
                        {
                            "label": "请选择",
                            "value": 0
                        },
                        {
                            "label": "学员消费",
                            "value": 1
                        },
                        {
                            "label": "教师收入",
                            "value": 2
                        }
                    ]
                },
                {
                    "type": "input-date-range",
                    "name": "daterangee",
                    "inline": true,
                    "label": "时间范围"
                },
                {
                    "type": "submit",
                    "label": "搜索"
                }
            ]
        },
        "filterTogglable": true,
        "headerToolbar": [
            "filter-toggler",
            "bulkActions",
            {
                "type": "action",
                "actionType": "download",
                "label": "导出Excel",
                "api": "/mapi/records/lists?state=${state}&daterangee=${daterangee}&uid=${uid}&is_export=1"
            },
            {
                "type": "tpl",
                "tpl": "共有 ${total} 条数据。",
                "className": "v-middle"
            },
            {
                "type": "columns-toggler",
                "align": "right"
            },
            {
                "type": "drag-toggler",
                "align": "right"
            },
            {
                "type": "pagination",
                "align": "right"
            }
        ],
        "footerToolbar": [
            "statistics",
            "switch-per-page",
            "pagination"
        ],
        "columns": [
            {
                "name": "create_time",
                "label": "日期",
                "type": "text",
                "toggled": true
            },
            {
                "name": "uid",
                "label": "UID",
                "type": "text",
                "toggled": true
            },
            {
                "name": "nickname",
                "label": "用户名",
                "type": "text",
                "toggled": true
            },
            {
                "name": "type",
                "label": "用户类型",
                "type": "text",
                "toggled": true
            },
            {
                "name": "state",
                "label": "状态",
                "type": "mapping",
                "map": {
                    "1": "<span class='label label-info'>正常</span>",
                    "2": "<span class='label label-danger'>撤销</span>"
                }
            },
            {
                "name": "category",
                "label": "场景",
                "type": "mapping",
                "map": {
                    "1": "<span class='label label-info'>学员消费</span>",
                    "2": "<span class='label label-success'>教师收入</span>"
                }
            },
            {
                "name": "schedule_id",
                "label": "排课ID",
                "type": "text",
                "toggled": true
            },
            {
                "name": "money_info",
                "label": "金额(元)",
                "type": "text",
                "toggled": true
            },
            {
                "name": "birthplace",
                "label": "生源地",     
                "type": "text",
                "toggled": true
            },
            {
                "name": "group_name",
                "label": "班级",     
                "type": "text",
                "toggled": true
            },
            {
                "name": "order_id",
                "label": "订单ID",     
                "type": "text",
                "toggled": true
            },
            {
                "name": "operator",
                "label": "操作员",     
                "type": "text",
                "toggled": true
            },
            {
                "name": "update_time",
                "label": "更新日期",     
                "type": "text",
                "toggled": false
            }
        ]
    }
}