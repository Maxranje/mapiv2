{
    "type": "page",
    "title": "学员实时表",
    "body": [
        {
            "type": "alert",
            "body": "数据根据时间范围统计, 默认为本月初到当前时间汇总数据, 自定义时间跨度不能超过一年",
            "level": "info",
            "showCloseButton": true,
            "showIcon": true,
            "className": "mb-2"
        },
        {
            "type": "crud",
            "draggable": true,
            "api": {
                "method": "post",
                "url":"/mapi/records/studentlists",
                "dataType": "form"
            },
            "perPage": 20,
            "perPageAvailable": [10, 20, 50],
            "syncLocation":false,
            "id" : "records_lists",
            "name" : "records_lists",
            "columnsTogglable": false,
            "labelTpl": "${id}",
            "filter": {
                "title": "条件搜索",
                "submitText": "",
                "body": [
                    {
                        "type": "input-text",
                        "name": "uid",
                        "label": "学员UID",
                        "size": "md",
                        "placeholder": ""
                    },
                    {
                        "type": "input-text",
                        "name": "nickname",
                        "label": "学员姓名",
                        "size": "md",
                        "placeholder": ""
                    },
                    {
                        "type": "tree-select",
                        "name": "sopuid",
                        "onlyLeaf":true,
                        "label": "学管",
                        "searchable":true,
                        "initiallyOpen":false,
                        "source": "/mapi/api/soplists"
                    },
                    {
                        "type": "input-date-range",
                        "name": "daterangee",
                        "inline": true,
                        "label": "时间范围",
                        "value":"${DATETOSTR(STARTOF(DATEMODIFY(NOW(), 0, 'month'), 'month'), 'X')},${DATETOSTR(ENDOF(DATEMODIFY(NOW(), 0, 'month'), 'month'), 'X')}"
                    },
                    {
                        "type": "submit",
                        "label": "搜索"
                    }
                ]
            },
            "filterTogglable": true,
            "headerToolbar": [
                "filter-toggler",
                "bulkActions",
                {
                    "type": "action",
                    "actionType": "download",
                    "label": "导出Excel",
                    "api": "/mapi/records/studentlists?nickname=${nickname}&daterangee=${daterangee}&uid=${uid}&sopuid=${sopuid}&is_export=1"
                },
                {
                    "type": "tpl",
                    "tpl": "导出时间范围内有金额数据的学员, 共有 ${total} 条数据。",
                    "className": "v-middle"
                },
                {
                    "type": "columns-toggler",
                    "align": "right"
                },
                {
                    "type": "drag-toggler",
                    "align": "right"
                },
                {
                    "type": "pagination",
                    "align": "right"
                }
            ],
            "footerToolbar": [
                "statistics",
                "switch-per-page",
                "pagination"
            ],
            "columns": [
                {
                    "name": "uid",
                    "label": "学员UID",
                    "type": "text",
                    "toggled": true
                },
                {
                    "name": "nickname",
                    "label": "学员名",
                    "type": "text",
                    "toggled": true
                },
                {
                    "name": "school",
                    "label": "学校",
                    "type": "text",
                    "toggled": true
                },
                {
                    "name": "graduate",
                    "label": "班级",
                    "type": "text",
                    "toggled": true
                },
                {
                    "name": "birthplace",
                    "label": "生源地",
                    "type": "text",
                    "toggled": true
                },
                {
                    "name": "sopname",
                    "label": "学管",
                    "type": "text",
                    "toggled": true
                },
                {
                    "name": "recharge_balance",
                    "label": "充值总金额",
                    "type": "text",
                    "toggled": true
                },
                {
                    "name": "checkjob_balance",
                    "label": "结算总金额",
                    "type": "text",
                    "toggled": true
                },
                {
                    "name": "refund_balance",
                    "label": "退款金额",
                    "type": "text",
                    "toggled": true
                },
                {
                    "name": "refund_back_balance",
                    "label": "退款还款金额",
                    "type": "text",
                    "toggled": true
                }
            ]
        }
    ]
}