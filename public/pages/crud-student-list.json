{
    "type": "page",
    "title": "学员管理",
    "toolbar": [
        {
            "type": "button",
            "actionType": "drawer",
            "label": "新增",
            "className" : "m-r-sm",
            "primary": true,
            "drawer": {
                "position": "right",
                "size": "lg",
                "title": "新增",
                "body": {
                    "type": "form",
                    "name": "student-new-form",
                    "api": {
                        "method": "post",
                        "url": "/mapi/student/create",
                        "dataType": "form"
                    },
                    "onEvent": {
                        "click": {
                            "actions": [
                                {
                                "actionType": "reload",
                                "componentId": "student_list"
                                }
                            ]
                        }
                    },
                    "body": [
                        {
                            "type": "input-text",
                            "name": "nickname",
                            "label": "昵称",
                            "required": true
                        },
                        {
                            "type": "divider"
                        },
                        {
                            "type": "input-text",
                            "name": "name",
                            "label": "登录名",
                            "desc": "建议用拼音, 例如昵称:王聪聪 登录名:wang.cc",
                            "required": true
                        },
                        {
                            "type": "divider"
                        },
                        {
                            "type": "input-text",
                            "name": "phone",
                            "label": "手机号",
                            "desc": "可以是非手机号的纯数字, 用作用户登录密码, 要求6位到12位之间",
                            "required": true
                        },
                        {
                            "type": "divider"
                        },
                        {
                            "type": "radios",
                            "name": "sex",
                            "label": "性别",
                            "value": "M",
                            "options": [
                                {
                                    "label": "男",
                                    "value": "M"
                                },
                                {
                                    "label": "女",
                                    "value": "F"
                                }
                            ],
                            "required": true
                        },
                        {
                            "type": "divider"
                        },
                        {
                            "type": "input-text",
                            "name": "birthplace",
                            "label": "生源地",
                            "required": true
                        },
                        {
                            "type": "divider"
                        },
                        {
                            "type": "input-text",
                            "name": "school",
                            "label": "学校"
                        },
                        {
                            "type": "divider"
                        },
                        {
                            "type": "input-text",
                            "name": "graduate",
                            "label": "学级"
                        }
                    ]
                }
            }
        },
        {
            "type": "button",
            "actionType": "drawer",
            "label": "批量新增",
            "primary": true,
            "drawer": {
                "position": "right",
                "size": "lg",
                "title": "批量新增",
                "body": {
                    "type": "form",
                    "name": "student-new-batch-form",
                    "api": {
                        "method": "post",
                        "url": "/mapi/student/batchcreate",
                        "dataType": "form"
                    },
                    "onEvent": {
                        "click": {
                            "actions": [
                                {
                                "actionType": "reload",
                                "componentId": "student_list"
                                }
                            ]
                        }
                    },
                    "body": [
                        {
                            "type": "input-excel",
                            "name": "excel",
                            "label": "批量上传",
                            "desc":"上传内容不允许有空行和空列, 第一行格式固定: name, phone, nickname, school, birthplace, sex, graduate, (其中 sex 为M或F)"
                        }
                    ]
                }
            }
        }
    ],
    "body": {
        "type": "crud",
        "draggable": true,
        "id" : "student_list",
        "api": {
            "method": "post",
            "url": "/mapi/student/lists",
            "dataType": "form"
        },
        "perPage": 20,
        "syncLocation":false,
        "labelTpl": "${uid}",
        "filter": {
            "title": "条件搜索",
            "submitText": "",
            "body": [
                {
                    "type": "input-text",
                    "name": "nickname",
                    "size" : "md",
                    "label": "昵称",
                    "placeholder": "支持模糊搜索"
                },
                {
                    "type": "input-text",
                    "name": "name",
                    "size" : "md",
                    "label": "登录名",
                    "placeholder": "严格搜索"
                },
                {
                    "type": "input-text",
                    "name": "phone",
                    "size" : "md",
                    "label": "手机号",
                    "placeholder": "严格搜索"
                },
                {
                    "label": "状态",
                    "type": "select",
                    "name": "state",
                    "value" : "0",
                    "options": [
                        {
                            "label": "请选择",
                            "value": "0"
                        },
                        {
                            "label": "正常",
                            "value": "1"
                        },
                        {
                            "label": "下线",
                            "value": "2"
                        }
                    ]
                },
                {
                    "type": "submit",
                    "label": "搜索"
                }
            ]
        },
        "filterTogglable": true,
        "headerToolbar": [
            "filter-toggler",
            "bulkActions",
            {
                "type": "tpl",
                "tpl": "共有 ${total} 条数据。",
                "className": "v-middle"
            },
            {
                "type": "columns-toggler",
                "align": "right"
            },
            {
                "type": "drag-toggler",
                "align": "right"
            },
            {
                "type": "pagination",
                "align": "right"
            }
        ],
        "footerToolbar": [
            "statistics",
            "switch-per-page",
            "pagination"
        ],
        "columns": [
            {
                "name": "uid",
                "label": "UID",
                "type": "text",
                "toggled": true
            },
            {
                "name": "nickname",
                "label": "昵称",
                "type": "text",
                "toggled": true
            },
            {
                "name": "name",
                "label": "登录名",
                "type": "text",
                "toggled": true
            },
            {
                "name": "phone",
                "label": "手机号",
                "type": "text",
                "toggled": true
            },
            {
                "name": "state",
                "label": "状态",
                "type": "mapping",
                "map": {
                    "2": "<span class='label label-danger'>下线</span>",
                    "1": "<span class='label label-success'>正常</span>"
                }
            },
            {
                "name": "sex",
                "label": "性别",
                "type": "mapping",
                "map": {
                    "M": "男",
                    "F": "女"
                }
            },
            {
                "name": "birthplace",
                "label": "生源地",
                "type": "text",
                "toggled": true
            },
            {
                "name": "school",
                "label": "学校",
                "type": "text",
                "toggled": true
            },
            {
                "name": "graduate",
                "label": "学级",
                "type": "text",
                "toggled": true
            },
            {
                "name": "order_count",
                "label": "订单数量",
                "type": "text",
                "toggled": true
            },
            {
                "name": "balance",
                "label": "总订单余额",
                "type": "text",
                "toggled": true
            },
            {
                "name": "update_time",
                "label": "更新时间",
                "type": "text",
                "toggled": true
            },
            {
                "type": "operation",
                "label": "操作",
                "width": 200,
                "buttons": [
                    {
                        "type": "button",
                        "label":"订单",
                        "level":"primary",
                        "actionType": "link",
                        "link":"/order/list?student_uid=$uid"
                    },
                    {
                        "type": "button",
                        "label":"课表",
                        "actionType": "drawer",
                        "drawer": {
                            "position": "right",
                            "size": "xl",
                            "title": "课表(前后3个月数据, 红色已结算, 绿色未结算)",
                            "body": {
                                "type": "service",
                                "api": "/mapi/schedule/calendarstudent?student_uid=${uid}",
                                "body" : {
                                    "type": "calendar",
                                    "largeMode": true,
                                    "value": "NOW()",
                                    "schedules": "$schedules"
                                }
                            }
                        }
                    },
                    {
                        "type": "button",
                        "label": "编辑",
                        "level": "info",
                        "actionType": "drawer",
                        "drawer": {
                            "position": "right",
                            "size": "lg",
                            "title": "编辑",
                            "body": {
                                "type": "form",
                                "name": "sample-edit-form",
                                "api": {
                                    "method": "post",
                                    "url": "/mapi/student/update",
                                    "dataType": "form"
                                },
                                "onEvent": {
                                    "click": {
                                        "actions": [
                                            {
                                            "actionType": "reload",
                                            "componentId": "student_list"
                                            }
                                        ]
                                    }
                                },
                                "body": [
                                    {
                                        "type": "input-text",
                                        "name": "uid",
                                        "label": "Uid",
                                        "disabled": true
                                    },
                                    {
                                        "type": "divider"
                                    },
                                    {
                                        "type": "input-text",
                                        "name": "nickname",
                                        "label": "昵称",
                                        "required": true
                                    },
                                    {
                                        "type": "divider"
                                    },
                                    {
                                        "type": "input-text",
                                        "name": "name",
                                        "label": "登录名",
                                        "required": true
                                    },
                                    {
                                        "type": "divider"
                                    },
                                    {
                                        "type": "input-text",
                                        "name": "phone",
                                        "label": "手机号",
                                        "required": true
                                    },
                                    {
                                        "type": "divider"
                                    },
                                    {
                                        "type": "radios",
                                        "name": "sex",
                                        "label": "性别",
                                        "value": "{$data.sex}",
                                        "options": [
                                            {
                                                "label": "男",
                                                "value": "M"
                                            },
                                            {
                                                "label": "女",
                                                "value": "F"
                                            }
                                        ],
                                        "required": true
                                    },
                                    {
                                        "type": "divider"
                                    },
                                    {
                                        "type": "radios",
                                        "name": "state",
                                        "label": "状态",
                                        "value": "{$data.state}",
                                        "options": [
                                            {
                                                "label": "正常",
                                                "value": "1"
                                            },
                                            {
                                                "label": "下线",
                                                "value": "2"
                                            }
                                        ],
                                        "required": true
                                    },
                                    {
                                        "type": "divider"
                                    },
                                    {
                                        "type": "input-text",
                                        "name": "birthplace",
                                        "label": "生源地",
                                        "required": true
                                    },
                                    {
                                        "type": "divider"
                                    },
                                    {
                                        "type": "input-text",
                                        "name": "school",
                                        "label": "学校"
                                    },
                                    {
                                        "type": "divider"
                                    },
                                    {
                                        "type": "input-text",
                                        "name": "graduate",
                                        "label": "学级"
                                    },
                                    {
                                        "type": "divider"
                                    }
                                ]
                            }
                        }
                    },
                    {
                        "type": "button",
                        "actionType": "ajax",
                        "label": "删除",
                        "level":"danger",
                        "confirmText": "您确认要删除学员么? 如果关联订单无法删除, 建议下线处理!",
                        "api": {
                            "method": "get",
                            "url": "/mapi/student/delete?uid=$uid"
                        }
                    }
                ],
                "toggled": true
            }
        ]
    }
}