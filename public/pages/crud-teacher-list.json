{
    "type":"page",
    "title": "教师列表",
    "toolbar": [
        {
            "type": "button",
            "actionType": "drawer",
            "label": "新增",
            "className" : "m-r-sm",
            "primary": true,
            "drawer": {
                "position": "right",
                "size": "lg",
                "title": "新增",
                "body": {
                    "type": "form",
                    "name": "teacher-new-form",
                    "api": {
                        "method": "post",
                        "url": "/mapi/teacher/create",
                        "dataType": "form"
                    },
                    "onEvent": {
                        "click": {
                            "actions": [
                                {
                                "actionType": "reload",
                                "componentId": "teacher_list"
                                }
                            ]
                        }
                    },
                    "body": [
                        {
                            "type": "input-text",
                            "name": "nickname",
                            "label": "昵称",
                            "required": true
                        },
                        {
                            "type": "divider"
                        },
                        {
                            "type": "input-text",
                            "name": "name",
                            "label": "登录名",
                            "desc": "建议用拼音, 例如: 王聪聪 wang.cc",
                            "required": true
                        },
                        {
                            "type": "divider"
                        },
                        {
                            "type": "input-text",
                            "name": "phone",
                            "label": "手机号",
                            "desc": "6位到12位之间, 手机号会作为账户默认登录密码, 重置密码也是如此",
                            "required": true
                        },
                        {
                            "type": "divider"
                        },
                        {
                            "type": "radios",
                            "name": "sex",
                            "label": "性别",
                            "value": "M",
                            "options": [
                                {
                                    "label": "男",
                                    "value": "M"
                                },
                                {
                                    "label": "女",
                                    "value": "F"
                                }
                            ],
                            "required": true
                        }
                    ]
                }
            }
        },
        {
            "type": "button",
            "actionType": "drawer",
            "label": "批量新增",
            "primary": true,
            "drawer": {
                "position": "right",
                "size": "lg",
                "title": "批量新增",
                "body": {
                    "type": "form",
                    "name": "new-batch-form",
                    "api": {
                        "method": "post",
                        "url": "/mapi/teacher/batchcreate",
                        "dataType": "form"
                    },
                    "onEvent": {
                        "click": {
                            "actions": [
                                {
                                "actionType": "reload",
                                "componentId": "teacher_list"
                                }
                            ]
                        }
                    },
                    "body": [
                        {
                            "type": "input-excel",
                            "name": "excel",
                            "label": "批量上传",
                            "desc":"上传内容不允许有空行和空列, 第一行格式固定: name, phone, nickname, sex"
                        }
                    ]
                }
            }
        }
    ],
    "body": {
        "type": "crud",
        "api": {
            "method": "post",
            "url": "/mapi/teacher/lists",
            "dataType": "form"
        },
        "perPage": 20,
        "syncLocation":false,
        "id":"teacher_list",
        "labelTpl": "${uid}",
        "filter": {
            "title": "条件搜索",
            "submitText": "",
            "body": [
                {
                    "type": "input-text",
                    "name": "nickname",
                    "label": "教师昵称",
                    "size" : "md",
                    "placeholder": "模糊搜索"
                },
                {
                    "type": "input-text",
                    "name": "name",
                    "label": "登录名",
                    "size" : "md",
                    "placeholder": "精确匹配"
                },
                {
                    "type": "input-text",
                    "name": "phone",
                    "label": "手机号",
                    "size" : "md",
                    "placeholder": "精确匹配"
                },
                {
                    "label": "教师状态",
                    "type": "select",
                    "name": "state",
                    "value" : "0",
                    "options": [
                        {
                            "label": "请选择",
                            "value": "0"
                        },
                        {
                            "label": "可排课",
                            "value": "1"
                        },
                        {
                            "label": "不可排课",
                            "value": "2"
                        }
                    ]
                },
                {
                    "type": "submit",
                    "label": "搜索"
                }
            ]
        },
        "filterTogglable": true,
        "headerToolbar": [
            "filter-toggler",
            "bulkActions",
            {
                "type": "tpl",
                "tpl": "共有 ${total} 条数据。",
                "className": "v-middle"
            },
            {
                "type": "columns-toggler",
                "align": "right"
            },
            {
                "type": "drag-toggler",
                "align": "right"
            },
            {
                "type": "pagination",
                "align": "right"
            }
        ],
        "footerToolbar": [
            "statistics",
            "switch-per-page",
            "pagination"
        ],
        "columns": [
            {
                "name": "uid",
                "label": "UID",
                
                "type": "text",
                "toggled": true
            },
            {
                "name": "nickname",
                "label": "教师昵称",
                "type": "text",
                "toggled": true
            },
            {
                "name": "name",
                "label": "登录名",
                "type": "text",
                "toggled": true
            },
            {
                "name": "phone",
                "label": "手机号",
                "type": "text",
                "toggled": true
            },
            {
                "name": "state",
                "label": "状态",
                "type": "mapping",
                "map": {
                    "2": "<span class='label label-danger'>不可排课</span>",
                    "1": "<span class='label label-success'>可排课</span>"
                }
            },
            {
                "name": "sex",
                "label": "性别",
                "type": "mapping",
                "map": {
                    "M": "男",
                    "F": "女"
                }
            },
            {
                "name": "create_time",
                "label": "创建时间",
                "type": "text",
                "toggled": false
            },
            {
                "name": "update_time",
                "label": "更新时间",
                "type": "text",
                "toggled": false
            },
            {
                "type": "operation",
                "label": "操作",
                "width": 270,
                "buttons": [
                    {
                        "type": "button",
                        "label":"编辑",
                        "actionType": "drawer",
                        "drawer": {
                            "position": "right",
                            "size": "lg",
                            "title": "编辑",
                            "body": {
                                "type": "form",
                                "name": "teacher-edit-form",
                                "api": {
                                    "method": "post",
                                    "url": "/mapi/teacher/update",
                                    "dataType": "form"
                                },
                                "onEvent": {
                                    "click": {
                                        "actions": [
                                            {
                                            "actionType": "reload",
                                            "componentId": "teacher_list"
                                            }
                                        ]
                                    }
                                },
                                "body": [
                                    {
                                        "type": "input-text",
                                        "name": "uid",
                                        "label": "Uid",
                                        "disabled": true
                                    },
                                    {
                                        "type": "divider"
                                    },
                                    {
                                        "type": "input-text",
                                        "name": "nickname",
                                        "label": "昵称",
                                        "required": true
                                    },
                                    {
                                        "type": "divider"
                                    },
                                    {
                                        "type": "input-text",
                                        "name": "name",
                                        "label": "登录名",
                                        "required": true
                                    },
                                    {
                                        "type": "divider"
                                    },
                                    {
                                        "type": "input-text",
                                        "name": "phone",
                                        "label": "手机号",
                                        "desc": "6位到12位之间, 只有在创建学员时候才会设置默认密码为手机号, 修改不会更新密码, 如要同步为手机号, 请重置密码",
                                        "required": true
                                    },
                                    {
                                        "type": "divider"
                                    },
                                    {
                                        "type": "radios",
                                        "name": "state",
                                        "label": "状态",
                                        "value": "{$data.state}",
                                        "options": [
                                            {
                                                "label": "可排课",
                                                "value": "1"
                                            },
                                            {
                                                "label": "不可排课",
                                                "value": "2"
                                            }
                                        ],
                                        "required": true
                                    },
                                    {
                                        "type": "divider"
                                    },
                                    {
                                        "type": "radios",
                                        "name": "sex",
                                        "label": "性别",
                                        "value": "{$data.sex}",
                                        "options": [
                                            {
                                                "label": "男",
                                                "value": "M"
                                            },
                                            {
                                                "label": "女",
                                                "value": "F"
                                            }
                                        ],
                                        "required": true
                                    }
                                ]
                            }
                        }
                    },

                    {
                        "type": "button",
                        "actionType": "ajax",
                        "label": "重置密码",
                        "confirmText": "重置密码后, 账户密码为当前账户填写的手机号!",
                        "api": {
                            "method": "get",
                            "url": "/mapi/api/reset?uid=$uid"
                        }
                    },
                    {
                        "type": "button",
                        "label":"绑定科目",
                        "level":"primary",
                        "actionType": "drawer",
                        "drawer": {
                            "position": "right",
                            "size": "lg",
                            "title": "绑定",
                            "body": [
                                {
                                    "type": "service",
                                    "api": "/mapi/column/lists?teacher_uid=$uid",
                                    "name": "column_band_list",
                                    "body": {
                                        "type": "cards",
                                        "source": "$rows",
                                        "card": {
                                            "header" :{
                                                "title":"科目: $subject_name"
                                            },
                                            "body":{
                                                "type" : "tpl",
                                                "tpl" : "$price_info"
                                            },
                                            "actions": [
                                                {
                                                    "type": "button",
                                                    "level": "link",
                                                    "icon": "fa fa-edit",
                                                    "actionType": "dialog",
                                                    "dialog": {
                                                        "size": "lg",
                                                        "title": "编辑绑定",
                                                        "body": {
                                                            "type": "form",
                                                            "name": "column-edit-form",
                                                            "api": {
                                                                "method": "post",
                                                                "url": "/mapi/column/update",
                                                                "dataType": "form"
                                                            },
                                                            "reload":"column_band_list",
                                                            "body": [
                                                                {
                                                                    "type": "input-text",
                                                                    "name": "column_id",
                                                                    "label": "绑定ID",
                                                                    "disabled": true
                                                                },
                                                                {
                                                                    "type": "divider"
                                                                },
                                                                {
                                                                    "type": "input-text",
                                                                    "name": "teacher_uid",
                                                                    "label": "教师ID",
                                                                    "disabled": true
                                                                },
                                                                {
                                                                    "type": "divider"
                                                                },
                                                                {
                                                                    "type": "tree-select",
                                                                    "name": "subject_id",
                                                                    "onlyLeaf":true,
                                                                    "label": "科目",
                                                                    "source": "/mapi/subject/lists?is_select=1",
                                                                    "disabled": true
                                                                },
                                                                {
                                                                    "type": "divider"
                                                                },
                                                                {
                                                                    "type": "combo",
                                                                    "name": "price",
                                                                    "label": "阈值客单价",
                                                                    "multiple": true,
                                                                    "required": true,
                                                                    "items": [
                                                                        {
                                                                            "type": "input-text",
                                                                            "name": "number",
                                                                            "addOn": {
                                                                                "type": "text",
                                                                                "label": "人"
                                                                            },
                                                                            "value" : 0,
                                                                            "desc": "人数阈值, 小于等于阈值则按照课时单价计算"
                                                                        },
                                                                        {
                                                                            "type": "input-text",
                                                                            "name": "price",
                                                                            "addOn": {
                                                                                "type": "text",
                                                                                "label": "元"
                                                                            },
                                                                            "value" : 0,
                                                                            "desc": "课时单价, 小于等于人数阈值则按照当前单价计算, 元单位"
                                                                        }
                                                                    ]
                                                                }
                                                            ]
                                                        }
                                                    }
                                                },
                                                {
                                                    "type": "button",
                                                    "icon": "fa fa-remove",
                                                    "actionType": "ajax",
                                                    "level":"danger",
                                                    "confirmText": "您确认要删除绑定信息么, 如果有绑定课程需要提前删除!",
                                                    "api": {
                                                        "method": "get",
                                                        "url": "/mapi/column/delete?id=$column_id"
                                                    },
                                                    "reload":"column_band_list"
                                                }
                                            ]
                                        }
                                    }
                                },
                                {
                                    "type": "divider"
                                },
                                {
                                    "type": "card",
                                    "body": {
                                        "type": "wrapper",
                                        "className": "h-32 flex items-center justify-center",
                                        "body": [
                                            {
                                                "type": "wrapper",
                                                "size": "none",
                                                "className": "text-center",
                                                "body": {
                                                    "type": "icon",
                                                    "icon": "plus",
                                                    "className": "text-2xl"
                                                }
                                            },
                                            {
                                                "type": "wrapper",
                                                "size": "none",
                                                "body": "添加"
                                            }
                                        ]
                                    },
                                    "itemAction":  {
                                        "type": "button",
                                        "icon": "fa fa-pencil",
                                        "tooltip": "添加绑定",
                                        "actionType": "dialog",
                                        "dialog": {
                                            "size": "lg",
                                            "title": "添加绑定",
                                            "body": {
                                                "type": "form",
                                                "name": "column-add-form",
                                                "api": {
                                                    "method": "post",
                                                    "url": "/mapi/column/create",
                                                    "dataType": "form"
                                                },
                                                "reload":"column_band_list",
                                                "body": [
                                                    {
                                                        "type": "input-text",
                                                        "name": "uid",
                                                        "label": "教师ID",
                                                        "disabled": true
                                                    },
                                                    {
                                                        "type": "divider"
                                                    },
                                                    {
                                                        "type": "tree-select",
                                                        "name": "subject_id",
                                                        "onlyLeaf":true,
                                                        "label": "科目",
                                                        "source": "/mapi/subject/lists?is_select=1",
                                                        "required": true
                                                    },
                                                    {
                                                        "type": "divider"
                                                    },
                                                    {
                                                        "type": "combo",
                                                        "name": "price",
                                                        "label": "阈值客单价",
                                                        "multiple": true,
                                                        "required": true,
                                                        "items": [
                                                            {
                                                                "type": "input-text",
                                                                "name": "number",
                                                                "addOn": {
                                                                    "type": "text",
                                                                    "label": "人"
                                                                },
                                                                "value" : 0,
                                                                "desc": "人数阈值, 小于等于阈值则按照课时单价计算"
                                                            },
                                                            {
                                                                "type": "input-text",
                                                                "name": "price",
                                                                "addOn": {
                                                                    "type": "text",
                                                                    "label": "元"
                                                                },
                                                                "value" : 0,
                                                                "desc": "课时单价, 小于等于人数阈值则按照当前单价计算, 元单位"
                                                            }
                                                        ]
                                                    }
                                                ]
                                            }
                                        }
                                    }
                                }
                            ]
                        }
                    },
                    {
                        "type": "button",
                        "label":"删除",
                        "level":"danger",
                        "actionType": "ajax",
                        "tooltip": "删除",
                        "confirmText": "删除教师, 需要提前删除教师绑定的排课",
                        "api": {
                            "method": "get",
                            "url": "/mapi/teacher/delete?uid=$uid"
                        }
                    }
                ],
                "toggled": true
            }
        ]
    }
}